generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  api_key  String
  diagrams Diagram[]
}

model Diagram {
  id     Int     @id @default(autoincrement())
  name   String?
  userId Int?
  User   User?   @relation(fields: [userId], references: [id])
}

model Node {
  id             Int               @id @default(autoincrement())
  outConnections NodeConnections[] @relation("outConnection")
  inConnections  NodeConnections[] @relation("inConnection")
}

model NodeConnections {
  outConnection Node @relation("outConnection", fields: [outNodeId], references: [id])
  outNodeId     Int
  inConnection  Node @relation("inConnection", fields: [inNodeId], references: [id])
  inNodeId      Int

  @@id([outNodeId, inNodeId])
}
